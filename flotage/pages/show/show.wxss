page {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
}
.clear-scroll {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
}

canvas {
    width: 100%;
    height: 100vh;
    position: fixed;
    z-index: 1;
}

.background-image {
    height: 100vh;
    width: 100%;
    background-size: 100% 100%;
    background-repeat: no-repeat;
    z-index: 0;
}

swiper-item,
.background-image-item {
    width: 100%;
    height: 100vh;
}